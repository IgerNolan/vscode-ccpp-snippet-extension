{
    "name": "CppSnippetExtension",
    "publisher": "IgerNolan",
    "displayName": "C/C++ Snippet Extension",
    "description": "Code snippets for C/C++",
    "version": "1.1.2",
    "engines": {
        "vscode": "^0.10.1"
    },
    "categories": [
        "Snippets"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "c",
                "path": "./snippet/C.json"
            },
            {
                "language": "cpp",
                "path": "./snippet/Cpp.json"
            }
        ],
        "configuration": {
            "title": "C/C++ Snippet Extension Settings",
            "properties": {
                "files.encoding": {
                    "type": "string",
                    "default": "utf8",
                    "description": "文件编码设置"
                },
                "files.eol": {
                    "type": "string",
                    "default": "\\n",
                    "description": "文件换行符设置"
                },
                "editor.rulers": {
                    "type": "array",
                    "default": [
                        80,
                        120
                    ],
                    "description": "编辑器标尺位置设置",
                    "items": {
                        "type": "number"
                    }
                }
            }
        }
    },
    "galleryBanner": {
        "color": "#E6E0EA",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/IgerNolan/vscode-ccpp-snippet-extension"
    },
    "icon": "image/Cpp.png",
    "license": "Check in License in the root folder"
}