{
    "name": "CppSnippetExtension",
    "publisher": "IgerNolan",
    "displayName": "C/C++ Snippet Extension",
    "description": "Code snippets for C/C++ with Region Fold support",
    "version": "2.0.0",
    "engines": {
        "vscode": "^1.50.0"
    },
    "categories": [
        "Snippets"
    ],
    "activationEvents": [
        "onLanguage:c",
        "onLanguage:cpp"
    ],
    "contributes": {
        "snippets": [
            {
                "language": "c",
                "path": "./snippet/C.json"
            },
            {
                "language": "cpp",
                "path": "./snippet/Cpp.json"
            }
        ],
        "configuration": {
            "title": "C/C++ Snippet Extension Settings",
            "properties": {
                "regionFold.markerColor": {
                    "type": "string",
                    "default": "green",
                    "description": "Region marker line color"
                }
            }
        }
    },
    "extensionDependencies": [
        "HO-COOH.include-info",
        "aaron-bond.better-comments",
        "MohammadBaqer.better-folding",
        "wraith13.bracket-lens",
        "oderwat.indent-rainbow",
        "SirTori.indenticator",
        "cliffordfajardo.highlight-line-vscode"
    ],
    "galleryBanner": {
        "color": "#E6E0EA",
        "theme": "light"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/IgerNolan/vscode-ccpp-snippet-extension"
    },
    "icon": "image/Cpp.png",
    "license": "Check in License in the root folder",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./"
    },
    "devDependencies": {
        "@types/node": "^14.14.6",
        "@types/vscode": "^1.50.0",
        "typescript": "^4.9.5"
    },
    "main": "./out/extension.js"
}